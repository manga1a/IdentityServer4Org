
@{
    ViewData["Title"] = "Add";
}

@model JavaScriptClientInputModel

<div class="row">
    <div class="col-xs-8 col-xs-offset-2">
        <h1 class="text-center">Add</h1>
        <form asp-action="Add" method="post" class="form-horizontal">
            <div class="form-group">
                <label asp-for="ClientId" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ClientId" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="ClientName" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="ClientName" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="RedirectUri" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="RedirectUri" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="PostLogoutRedirectUri" class="col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="PostLogoutRedirectUri" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AllowedCorsOrigin" class="col-sm-4"></label>
                <div class="col-sm-8">
                    <input asp-for="AllowedCorsOrigin" class="form-control" />
                </div>
            </div>
            <div class="form-group">
                <label asp-for="AllowedScopes" class="col-sm-2"></label>
                <div class="col-sm-10">
                    <input asp-for="AllowedScopes" class="form-control" placeholder="Comma seperated values"/>
                </div>
            </div>
            <div class="form-check">
                <input asp-for="RequiredConsent" class="form-check-input">
                <label asp-for="RequiredConsent" class="form-check-label"></label>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
            <div asp-validation-summary="All"></div>
        </form>
    </div>
</div>

