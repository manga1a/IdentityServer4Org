
@{
    ViewData["Title"] = "Index";
}

@model AdminHomeViewModel
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Users</h4>
            <h6 class="card-subtitle mb-2 text-muted">Identity user list</h6>
            <table class="table">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model.Users)
                    {
                        <tr>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                        </tr>
                    }
                </tbody>
            </table>
            <a class="card-link" asp-area="Admin" asp-controller="User" asp-action="Register">Register new user</a>
        </div>
    </div>

